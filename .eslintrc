{
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["react"],
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-uses-vars": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}